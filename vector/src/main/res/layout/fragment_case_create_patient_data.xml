<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/case_data_patient"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/case_create_patient_name_value"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:fontFamily="sans-serif-regular"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="@string/case_create_patient_name_hint"
            android:text=""
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-regular"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/case_create_gender_label"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/case_data_gender_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:checkedButton="@id/case_data_gender_other"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/case_data_gender_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_data_gender_male"/>

        <RadioButton
            android:id="@+id/case_data_gender_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_data_gender_female"/>

        <RadioButton
            android:id="@+id/case_data_gender_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_data_gender_other"/>

        <RadioButton
            android:id="@+id/case_data_gender_unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_data_gender_unknown"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="44dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-regular"
            android:maxLines="1"
            android:textSize="16sp"
            android:text="@string/case_create_birthdate_label" />

        <Button
            android:id="@+id/set_date_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/case_create_birthdate_pick" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_data_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#21264E"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text="@string/case_data_save"
            android:onClick="saveData"/>

    </RelativeLayout>

</LinearLayout>