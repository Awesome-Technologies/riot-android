<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qr_login_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/qr_scanner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/login_actions_bar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_large_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:src="@drawable/logo_splash" />

        <im.vector.view.camera.CameraSourcePreview
            android:id="@+id/qr_scanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_weight="2">

            <im.vector.view.camera.GraphicOverlay
                android:id="@+id/graphicOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </im.vector.view.camera.CameraSourcePreview>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/auth_login_qr_code" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/qr_code" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_actions_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/alternative_login"
            style="@style/VectorButtonStyle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/layout_horizontal_margin"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:text="@string/auth_switch_to_login_activity"
            android:textAllCaps="true" />

    </RelativeLayout>


</RelativeLayout>
